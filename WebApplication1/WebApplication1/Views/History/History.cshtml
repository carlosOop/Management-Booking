@{
    ViewData["Title"] = "History";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: white;
    }

    .nav-bar {
        background-color: white;
        padding: 10px 30px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ccc;
    }

    .nav-tabs a {
        margin: 0 10px;
        padding: 10px 20px;
        text-decoration: none;
        color: black;
        border-radius: 20px;
    }

    .nav-tabs a.active {
        background-color: green;
        color: white;
    }

    .profile-icon img {
        border-radius: 50%;
    }

    .table-container {
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        margin-top: 20px;
    }

    h3 {
        text-align: center;
        margin-bottom: 10px;
        background-color: #5b5b5b;
        color: white;
        padding: 10px;
        border-radius: 4px;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 10px;
    }

    .action-buttons a {
        padding: 8px 16px;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
    }

    .edit-button {
        background-color: orange;
    }

    .delete-button {
        background-color: red;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    .table thead th {
background-color: #f2e85e !important;
text-align: left;
}
    }

    table, th, td {
        border: 1px solid #bbb;
        padding: 8px;
    }

    table tbody tr:hover {
        background-color: #f5f5f5;
    }

    table td:last-child {
        text-align: center;
    }
</style>

<div class="header-title">
    <h3>Customer History</h3>
</div>

<div class="table-container">
      <form method="get" class="mb-3 d-flex justify-content-end align-items-center" asp-controller="Customer" asp-action="History">
        <label for="filter" class="form-label me-2 mb-0">Filter:</label>
        <select id="filter" name="filter" class="form-select w-auto" onchange="this.form.submit()">
            <option value="all" @(selectedFilter == "all" ? "selected" : "")>All Customer History</option>
            <option value="inhotel" @(selectedFilter == "inhotel" ? "selected" : "")>Customer in Hotel</option>
            <option value="checkedout" @(selectedFilter == "checkedout" ? "selected" : "")>Checked Out Customer</option>
        </select>
    </form>
    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Name</th>
                <th>Room Number</th>
                <th>Room Type</th>
                <th>Bed</th>
                <th>Price</th>
                <th>Mobile No.</th>
                <th>Nationality</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Date of Birth</th>
                <th>In Date</th>
                <th>Out Date</th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.RoomNumber</td>
                    <td>@customer.RoomType</td>
                    <td>@customer.Bed</td>
                    <td>@customer.Price</td>
                    <td>@customer.MobileNo</td>
                    <td>@customer.Nationality</td>
                    <td>@customer.Gender</td>
                    <td>@customer.Address</td>
                    <td>@customer.DateOfBirth.ToString("MM/dd/yyyy")</td>
                    <td>@customer.InDate.ToString("MM/dd/yyyy")</td>
                    <td>@customer.OutDate.ToString("MM/dd/yyyy")</td>
                </tr>
            
        </tbody>
    </table>
</div>
